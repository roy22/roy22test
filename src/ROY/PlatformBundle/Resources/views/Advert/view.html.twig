{% extends "ROYPlatformBundle::layout.html.twig" %}

{% block title %}
	Une annonce - {{ parent() }}
{% endblock %}

{% block royplatform_body %}
	
	{% if advert.image is not null %}
		<img src="{{ advert.image.url }}" alt="{{ advert.image.alt }}">
	{% endif %}
	
	<h2>{{ advert.title }}</h2>
	<i>Par {{ advert.author }}, le {{ advert.date|date('d/m/Y') }}</i>
	
	<div class="well">
		{{ advert.content }}
	</div>
	
	<div class="well">
		{% if listApplications is not null %}
		<ul>
			{% for app in listApplications %}
					<li>{{ app.date|date('d/m/Y') }} - {{ app.author }} - {{ app.content }}</li>
			{% endfor %}
		</ul>
		{% endif %}
	</div>
	
	
	<p>
		<a href="{{ path('roy_platform_home') }}" class="btn btn-default">
			<i class="glyphicon glyphicon-chevron-left"></i>
			Retour Ã  la liste
		</a>	
		<a href="{{ path('roy_platform_edit', {'id':advert.id}) }}" class="btn btn-default">
			<i class="glyphicon glyphicon-edit"></i>
			Modifier l'annonce
		</a>
		<a href="{{ path('roy_platform_delete', {'id':advert.id}) }}" class="btn btn-default">
			<i class="glyphicon glyphicon-trash"></i>
			Supprimer l'annonce
		</a>
	</p>

{% endblock %}
